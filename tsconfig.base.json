{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myorganizer/api-specs": ["libs/api-specs/src/index.ts"],
      "@myorganizer/app-api-client": ["libs/app-api-client/src/index.ts"],
      "@myorganizer/auth": ["libs/auth/src/index.ts"],
      "@myorganizer/core": ["libs/core/src/index.ts"],
      "@myorganizer/vault-core": ["libs/vault-core/src/index.ts"],
      "@myorganizer/web-pages/dashboard": [
        "libs/web/pages/dashboard/src/index.ts"
      ],
      "@myorganizer/web-pages/todos": ["libs/web/pages/todos/src/index.ts"],
      "@myorganizer/web-ui": ["libs/web-ui/src/index.ts"],
      "@myorganizer/web-vault": ["libs/web-vault/src/index.ts"],
      "@myorganizer/web-vault-ui": ["libs/web-vault-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "**/Pods/**", "dist", "ios", "android"]
}
