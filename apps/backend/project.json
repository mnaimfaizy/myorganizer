{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "dependsOn": ["generate-types"],
      "options": {
        "webpackConfig": "apps/backend/webpack.config.js",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets", "apps/backend/src/templates"],
        "externalDependencies": "all",
        "generatePackageJson": true,
        "outputHashing": "none",
        "sourceMap": false,
        "outputPath": "dist/apps/backend/",
        "compiler": "tsc",
        "target": "node"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "parallel": false,
        "commands": [
          "yarn nx run backend:build:production",
          "node tools/scripts/package-backend-api.mjs"
        ]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build",
        "watch": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts"
      }
    },
    "prisma": {
      "command": "prisma --schema prisma/schema",
      "options": {
        "cwd": "apps/backend/src"
      }
    },
    "migrate": {
      "command": "prisma migrate dev --schema prisma/schema",
      "options": {
        "cwd": "apps/backend/src"
      }
    },
    "generate-types": {
      "command": "prisma generate --schema prisma/schema",
      "options": {
        "cwd": "apps/backend/src"
      }
    }
  }
}
